// ბოლო
{
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ],
      "runtime": "nodejs20",
      "serviceAccount": "ailbee@appspot.gserviceaccount.com",
      "buildServiceAccount": "ailbee-cloud-build@ailbee.iam.gserviceaccount.com"
    }
  ],
  "hosting": {
    "public": "frontend/build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/**",
        "apphosting": "backend"
      }
    ]
  },
  "apphosting": {
    "source": "backend",
    "serviceId": "ailbee-cloud-run-backend",
    "region": "us-central1"
  }
}